    align-items: flex-start;
    gap: 10px;
    color: var(--black-color);
    width: 100%;
    margin-top: 60px;
}

.title-row h1 {
    margin: 0;
    margin-left: 40px;
    font-size: var(--font-size-large);
    font-weight: bolder;
}

.lines {
