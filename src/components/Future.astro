    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 20px;
    width: 100%;
}

.text-content {
    display: flex;
    flex-direction: column;
    text-align: start;
    gap: 20px;
    flex: 1;
    padding: 20px;
}

.text-content h3 {
    font-weight: bolder;
    font-size: var(--font-size-medium);
    align-self: flex-start;
}

.text-content p {
    font-size: var(--font-size-small);
    align-self: center;
}

.custom-list-item .text-content h3, .custom-list-item .text-content p {
    color: var(--white-color);
}

.custom-list-item-reversed .text-content h3, .custom-list-item-reversed .text-content p {
    color: var(--black-color);
}

.img {
    width: 100%;
    max-width: 400px;
    height: auto;
}

